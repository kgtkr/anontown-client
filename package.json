{
  "name": "@anontown/client-root",
  "private": true,
  "devDependencies": {
    "typescript": "^3.8.3",
    "prettier": "^2.7.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "@lerna-lite/run": "^1.11.2",
    "@lerna-lite/cli": "^1.11.2",
    "eslint-plugin-import": "^2.26.0"
  },
  "scripts": {
    "lint": "eslint 'packages/*/src/**/*.{ts,tsx}'",
    "lint:fix": "eslint --fix 'packages/*/src/**/*.{ts,tsx}'",
    "format:check": "prettier --check 'packages/*/src/**/*.{ts,tsx}'",
    "format": "prettier --write 'packages/*/src/**/*.{ts,tsx}'",
    "dev": "lerna run --include-dependencies --parallel --stream --scope @anontown/client dev",
    "dev-bff": "lerna run --include-dependencies build --scope @anontown/client && lerna run --include-dependencies --parallel --stream --scope @anontown/bff dev"
  },
  "workspaces": [
    "packages/common",
    "packages/client",
    "packages/bff"
  ]
}
