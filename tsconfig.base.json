{
  "compilerOptions": {
    // tsのアップデート次第libとtargetをes2021に
    "target": "ES2019",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "preserveWatchOutput": true,
    "esModuleInterop": true,
  }
}
